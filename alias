alias y="yarn"
alias pr="./mpr -s --team=forwarding-platform --label=forwarding-platform"
alias gap="g add -p"
alias ga="g add"
alias gpl="git pull"
alias gst="g status"
alias gcm="gc -m"
alias skim="rg --files --hidden | command tree -d -L 3 --fromfile ."
alias ls="exa"
alias git-delete-squashed='git checkout -q master && git for-each-ref refs/heads/ "--format=%(refname:short)" | while read branch; do mergeBase=$(git merge-base master $branch) && [[ $(git cherry master $(git commit-tree $(git rev-parse $branch\^{tree}) -p $mergeBase -m _)) == "-"* ]] && git branch -D $branch; done'
alias f="bat \`fzf\`"
alias console="fx rdev exec core rails console"
alias migrate="fx rdev rake db:migrate"
alias bastion_ssh='./env-improvement/bin/bastion ssh'
alias restart="fx rdev restart core"
alias nuke-yarn="yarn cache clean && rm -rf node_modules && rm -rf webpack/.cache && yarn install"
alias load-secret="./script/dev_secret.rb -e ALGOLIA_SEARCH_ONLY_KEY ALGOLIA_API_KEY >> .env.local"
alias pods="fx rdev get pods"
